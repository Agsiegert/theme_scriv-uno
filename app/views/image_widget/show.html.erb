<% if scrivito_in_editable_view? || widget.show_in_lightbox != "Yes" %>
  <%= render 'image_widget/image', widget: widget %>
<% else %>
  <%= link_to(scrivito_path(widget.lightbox_ref), {:title => widget.image.title, data: {gallery:  widget.lightbox_gallery_name}}) do %>
    <%= render 'image_widget/image', widget: widget %>
  <% end %>
<% end %>
