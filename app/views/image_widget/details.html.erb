<div class="details-view">
  <%= scrivito_details_for 'Image' do %>
    <%= scrivito_image_tag widget, :image %>
  <% end %>

  <%= scrivito_details_for 'Show Image in Gallery' do %>
    <%= render partial: 'shared/toggle_buttons', locals: {obj: widget, attribute: "show_in_lightbox"} %>
  <% end %>

  <%= scrivito_details_for 'Lightbox Gallery Name' do %>
    <div class="alert alert-info">
      Only needed for more than one lightbox gallery per page, must begin with a hashtag: '#'
    </div>
    <%= scrivito_tag(:span, widget, :lightbox_gallery_name) %>
  <% end %>

  <%= scrivito_details_for 'Large Version of Image' do %>
    <div class="alert alert-info">If not set we will use the same image)</div>
    <%= scrivito_edit_reference(widget, :lightbox_reference) %>
  <% end %>
</div>
