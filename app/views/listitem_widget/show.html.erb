<div class="list_item">
  <a href="#"></a>
  <%= scrivito_image_tag widget, :image, class: "square" %>
  <div class="list_item_content">
    <% level = widget.headline_level || "h4" %>
    <%= scrivito_tag level.to_sym, widget, :headline %>
    <%= scrivito_tag :span, widget, :subline, class: "meta" %>
    <%= scrivito_tag(:p, widget, :content) %>
    <% if widget.link.present? %>
      <%= link_to(widget.link.display_title, scrivito_path(widget.link)) %>
    <% end %>
  </div>
</div>
