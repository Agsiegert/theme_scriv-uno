<%= scrivito_tag_list(:ul, @obj.homepage, :toclist, class: "nav navbar-nav", id: "main_nav") do |list, item| %>
  <% list.tag(:li, id: "main_nav_page_#{item.id}", data: { path: item.path }) do %>
