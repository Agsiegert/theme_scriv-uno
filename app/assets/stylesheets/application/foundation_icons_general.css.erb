/* font-face */
@font-face {
  font-family: "foundation_icons_general";
  src: url("<%= asset_path 'foundation_icons_general.eot' %>");
  src: url("<%= asset_path 'foundation_icons_general.woff' %>") format("woff"), url("<%= asset_path 'foundation_icons_general.ttf' %>") format("truetype");
  font-weight: normal;
  font-style: normal;
}

/* global foundicon styles */
[class*="foundicon-"] {
  font-size:20px;
  padding:0 5px 0 0;
  display: inline-block;
  width: auto;
  height: auto;
  line-height: inherit;
  vertical-align: middle;
  background-image: none;
  background-position: 0 0;
  background-repeat: repeat;
}

